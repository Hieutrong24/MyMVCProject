@{
    Layout = "~/Views/Shared/_Layout_User.cshtml";  
    ViewBag.Title = "Đang chuyển hướng đến VNPAY...";
}

<div class="container text-center mt-5">
    <div class="card shadow p-5">
        <h3 class="text-primary mb-4">Xin vui lòng chờ trong giây lát...</h3>
        <div class="spinner-border text-success" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3">Hệ thống đang chuyển hướng bạn đến cổng thanh toán VNPAY.</p>
        <p>Nếu không được chuyển tự động, <a id="manualRedirect" href="@ViewBag.VnpayUrl">bấm vào đây</a>

</div>
</div>

@section scripts {
    <script>
       
        setTimeout(function () {
            document.getElementById('manualRedirect').click();
        }, 2000);
    </script>
}
