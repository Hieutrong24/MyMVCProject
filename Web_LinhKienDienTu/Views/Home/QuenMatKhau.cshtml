@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout_Form.cshtml";  
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">
            <h3 class="text-center mb-4 text-primary">🔒 Quên mật khẩu</h3>

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success">@ViewBag.Success</div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="get" action="@Url.Action("QuenMatKhau", "Home")">
                <div class="mb-3">
                    <label for="email" class="form-label">Nhập địa chỉ Email</label>
                    <input type="email" name="email" class="form-control" placeholder="abc@example.com" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">Gửi mật khẩu qua Email</button>
            </form>

            <div class="mt-3 text-center">
                <a href="@Url.Action("Login", "Home")" class="text-decoration-none">← Quay lại đăng nhập</a>
            </div>
        </div>
    </div>
</div>
